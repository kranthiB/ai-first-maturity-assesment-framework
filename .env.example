# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-this-in-production
DEBUG=True

# Database Configuration
DATABASE_TYPE=h2
DATABASE_URL=sqlite:///app.db

# PostgreSQL (if using)
# DATABASE_TYPE=postgresql
# DATABASE_URL=postgresql://username:password@localhost:5432/afs_assessment
# POSTGRES_USER=afs_user
# POSTGRES_PASSWORD=your_postgres_password
# POSTGRES_DB=afs_assessment
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432

# MySQL (if using)
# DATABASE_TYPE=mysql
# DATABASE_URL=mysql+pymysql://username:password@localhost:3306/afs_assessment
# MYSQL_USER=afs_user
# MYSQL_PASSWORD=your_mysql_password
# MYSQL_DATABASE=afs_assessment
# MYSQL_HOST=localhost
# MYSQL_PORT=3306

# H2 Database (default for development)
# DATABASE_TYPE=h2
# H2_DATABASE_PATH=./data/afs_assessment.h2
# H2_USER=sa
# H2_PASSWORD=

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0
CACHE_TYPE=redis
CACHE_REDIS_HOST=localhost
CACHE_REDIS_PORT=6379
CACHE_REDIS_DB=0
CACHE_DEFAULT_TIMEOUT=300

# Application Settings
APP_NAME=AFS Maturity Assessment Framework
APP_VERSION=1.0.0
APP_DESCRIPTION=AI-First Software Engineering Maturity Assessment Framework

# File Upload Settings
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=static/uploads
ALLOWED_EXTENSIONS=csv,xlsx,pdf

# Export Settings
EXPORT_FOLDER=data/exports
EXPORT_CLEANUP_HOURS=24

# Email Configuration (for future use)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password

# Security Settings
WTF_CSRF_ENABLED=True
WTF_CSRF_TIME_LIMIT=3600
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s %(levelname)s %(name)s %(message)s
LOG_FILE=logs/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Performance Settings
SQLALCHEMY_ENGINE_OPTIONS_POOL_SIZE=20
SQLALCHEMY_ENGINE_OPTIONS_MAX_OVERFLOW=30
SQLALCHEMY_ENGINE_OPTIONS_POOL_TIMEOUT=30
SQLALCHEMY_ENGINE_OPTIONS_POOL_RECYCLE=3600

# Development Settings
FLASK_DEBUG=True
TESTING=False

# Production Settings (uncomment for production)
# FLASK_ENV=production
# DEBUG=False
# WTF_CSRF_ENABLED=True
# SESSION_COOKIE_SECURE=True

# Analytics and Monitoring (for future use)
ANALYTICS_ENABLED=True
METRICS_ENABLED=False

# Feature Flags
ENABLE_REGISTRATION=True
ENABLE_API=True
ENABLE_EXPORTS=True
ENABLE_ANALYTICS=True